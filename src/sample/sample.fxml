<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<AnchorPane prefHeight="600" prefWidth="900" stylesheets="@../css/style_menu.css" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <VBox fx:id="menu" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0">
        <Button fx:id="daltonBtn" focusTraversable="false" onAction="#startDaltonTest" prefHeight="40" prefWidth="300" styleClass="button_my" text="Тест на дальтонізм">
             <VBox.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
             </VBox.margin>
        </Button>

        <Button fx:id="colorBtn" focusTraversable="false" onAction="#showColorTestSettings" prefHeight="40" prefWidth="300" styleClass="button_my" text="Тест на чутливість до кольору">
            <VBox.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </VBox.margin>
        </Button>

        <Button fx:id="trainingBtn" focusTraversable="false" onAction="#startTraining" prefHeight="40" prefWidth="300" styleClass="button_my" text="Розминка для очей">
            <VBox.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </VBox.margin>
        </Button>

        <Button fx:id="exitBtn" focusTraversable="false" onAction="#exit" prefHeight="40" prefWidth="300" styleClass="button_my" text="Вихід">
            <VBox.margin>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </VBox.margin>
        </Button>
    </VBox>

    <Button visible="false" fx:id="backToMenuBtn" prefHeight="40" prefWidth="300" text="Вихід в меню" onAction="#backToMenu" AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="8.0" styleClass="button_my">
    </Button>

    <VBox visible="false" fx:id="colorTestMenu" AnchorPane.bottomAnchor="48" AnchorPane.leftAnchor="8" AnchorPane.rightAnchor="8" AnchorPane.topAnchor="8">
        <Button fx:id="colorTestBackToMenu" text="Повернутися до меню" styleClass="button_my" prefHeight="40" onAction="#hideColorTestSettings">
            <VBox.margin>
                <Insets left="3.0" right="3.0" top="3.0" bottom="3"/>
            </VBox.margin>
        </Button>

        <Label text="Кількість питань">
            <VBox.margin>
                <Insets left="3.0" right="3.0" top="3.0" />
            </VBox.margin>
        </Label>

        <Slider orientation="HORIZONTAL" fx:id="colorTestCountSlider" snapToTicks="true" blockIncrement="5" showTickLabels="true" showTickMarks="true" majorTickUnit="5" minorTickCount="4" prefHeight="40" min="0" max="50">
            <VBox.margin>
                <Insets bottom="3.0" left="3.0" right="3.0"/>
            </VBox.margin>
        </Slider>

        <CheckBox fx:id="colorCheck" text="Вибрати колір">
            <VBox.margin>
                <Insets top="3.0" left="3.0" right="3.0"/>
            </VBox.margin>
        </CheckBox>

        <ColorPicker fx:id="colorPicker" visible="${colorCheck.selected}">
            <VBox.margin>
                <Insets bottom="3.0" left="3.0" right="3.0"/>
            </VBox.margin>
        </ColorPicker>

        <Button fx:id="startColorTestBtn" text="Почати тест " styleClass="button_my" prefHeight="40" onAction="#startColorTest">
            <VBox.margin>
                <Insets left="3.0" right="3.0" top="3.0" bottom="3"/>
            </VBox.margin>
        </Button>
    </VBox>
</AnchorPane>
